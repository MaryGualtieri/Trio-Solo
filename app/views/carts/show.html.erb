<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% CartProduct.all.each do |product| %>
      <tr>
      	<% if product.cart_id == current_user.id %>	
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Destroy', remove_cart_path(product.id), method: :post, data: { confirm: 'Are you sure?' } %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
